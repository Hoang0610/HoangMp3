<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/imageviewbackgroundbanner"
        android:scaleType="fitXY">

    </ImageView>
    <View
        android:background="@drawable/custom_background_banner"
        android:layout_width="match_parent"
        android:layout_height="200dp">

    </View>
    <RelativeLayout
        android:id="@+id/relative1"
        android:layout_alignBottom="@id/imageviewbackgroundbanner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/imageviewbanner"
            android:padding="2dp"
            android:layout_width="70dp"
            android:layout_height="70dp">

        </ImageView>
        <TextView
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:text="lo yen mat roi"
            android:textSize="17sp"
            android:id="@+id/textviewbannertitlebaihat"
            android:layout_toRightOf="@id/imageviewbanner"
            android:layout_alignTop="@id/imageviewbanner"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>
        <RelativeLayout
            android:layout_marginTop="7dp"

            android:layout_toRightOf="@id/imageviewbanner"
            android:layout_below="@id/textviewbannertitlebaihat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/textviewnoidung"
                android:textColor="#ffffff"
                android:text="chao ban"
                android:maxLines="2"
                android:layout_marginRight="40dp"
                android:textSize="13dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>