<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView


    android:elevation="5dp"
    android:layout_margin="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">

        <TextView



            android:layout_margin="15dp"
            android:id="@+id/textviewdanhsachindex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="20sp">

        </TextView>

        <TextView

            android:id="@+id/textviewtenbaihat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/textviewdanhsachindex"
            android:ellipsize="end"
            android:maxWidth="250dp"
            android:singleLine="true"
            android:text="Ten Ca Khuc "
            android:textColor="#321B2F"
            android:textSize="20sp">

        </TextView>

        <TextView

            android:id="@+id/textviewtencasi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textviewtenbaihat"
            android:layout_toRightOf="@id/textviewdanhsachindex"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="Hoa mINzy"
            android:textColor="#67774B"
            android:textSize="20sp">

        </TextView>
        <ImageView


            android:src="@drawable/heart"
            android:layout_marginRight="5dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:id="@+id/imageviewluotthichdanhsachbaihat"
            android:layout_width="30dp"
            android:layout_height="30dp">

        </ImageView>

    </RelativeLayout>

</androidx.cardview.widget.CardView>