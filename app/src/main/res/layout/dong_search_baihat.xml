<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView


        android:scaleType="fitXY"
        android:layout_margin="3dp"
        android:id="@+id/imageviewsearchbaihat"
        android:layout_width="80dp"
        android:layout_height="80dp">

    </ImageView>
    <TextView

        android:id="@+id/textviewsearchtenbaihat"
        android:textSize="18sp"
        android:textColor="#1E1413"
        android:layout_toRightOf="@id/imageviewsearchbaihat"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="5dp"
        android:maxWidth="250dp"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </TextView>

    <TextView

        android:layout_below="@id/textviewsearchtenbaihat"
        android:id="@+id/textviewsearchtencasi"
        android:textSize="18sp"
        android:textColor="#5C4E36"
        android:layout_toRightOf="@id/imageviewsearchbaihat"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="5dp"
        android:maxWidth="250dp"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </TextView>
    <ImageView


        android:layout_marginRight="10dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/heart"
        android:id="@+id/imageviewsearchluotthich"
        android:layout_width="30dp"
        android:layout_height="30dp">

    </ImageView>

</RelativeLayout>